#!/usr/bin/env ruby

compile '/less/style/' do
  filter :less
end
route '/less/style/' do
  '/style.css'
end
route '/less/*/' do
  # Ignore subdirectories of less/ (includes)
end

compile '/coffee/*' do
  filter :coffeescript
end

# Access single coffeescript sources as JS.
# Only for development use. In production, use /js/all/
route '/coffee/*' do
  item.identifier.sub(/^\/coffee\//, '/js/').chop + '.js'
end

# All JavaScript sources concatenated and minified
compile '/js/all/' do
  filter :erb
  filter :uglify_js
end
route '/js/all/' do
  '/js/all.js'
end

compile '*' do
  if item[:extension] == 'html'
    filter :erb
    layout 'default'
  end
end

route '*' do
  if item[:extension] == 'html'
    # Write item with identifier /foo/ to /foo/index.html
    item.identifier + 'index.html'
  else
    # Write item with identifier /foo/ to /foo.ext
    item.identifier.chop + '.' + item[:extension]
  end
end

layout '*', :erb
